{
  "manifest_version": 3,
  "name": "GitSense",
  "version": "1.0",
  "description": "Track GitHub repo activity",

  "permissions": [
    "storage",
    "notifications"
  ],

  "host_permissions": [
    "https://git-analyser-nu1i.onrender.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  }
}
